#include <iostream>

using namespace std;

int
main ()
{

  int choose, data = 0, pnumber, number[100];
  string pass, Password, username, name[100];
  char repeat;

  cout << "==WELCOME TO MOBILE PHONE PROGRAM==" << endl;
  cout << endl;
  cout << "please sign up before you start the program" << endl;
  cout << endl;
  cout << "USERNAME : ";
  cin >> username;
  cout << "PHONE NUMBER : ";
  cin >> pnumber;

newpass:
  cout << "Please make a Password : ";
  cin >> pass;
  cout << "PASSWORD HAS BEEN SET !" << endl;

logino:
  cout << endl;
  cout << "==PHONEBOOK==" << endl;
  cout << "PASSWORD : ";
  cin >> Password;

  for (int a = 0; a < 1; a++){
      if (Password == pass){
	repeat:
	  cout << endl;
	  cout << "1. Add Contact" << endl;
	  cout << "2. edit Contact" << endl;
	  cout << "3. delete Contact" << endl;
	  cout << "4. Contact List" << endl;
	  cout << "5. Log Out" << endl;
	  cout << endl;

	  cout << "masukan pilihan anda : ";
	  cin >> choose;
	  cout << endl;

	  switch (choose)
	    {
	    case 1:
	      cout << "contact name: ";
	      cin >> name[data];
	      cout << "contact number: ";
	      cin >> number[data];
	      data = data + 1;
	      cout << "INPUT SUCCESSFUL !" << endl;
	      goto repeat;


	    case 2:
	      int change;
	      cout << "\nEDIT CONTACT";
	      if (data == 0)
		{
		  cout << "\nNO DATA HAS FOUND!!";
		}
	      else
		{
		  for (int a = 0; a < data; a++)
		    {
		      if (name[a] != "0")
			{
			  cout << endl;
			  cout << "DATA   : [" << a << "]" << endl;
			  cout << "Name   : " << name[a] << endl;
			  cout << "number : " << number[a] << endl;
			}
		    }
		  cout << "\nINSERT DATA INDEX : ";
		  cin >> change;
		  if (change > data || change < 0)
		    {
		      cout << "NO DATA HAS FOUND\n\n";
		      break;
		    }
		  else
		    {
		      cout << "\nInsert New Name : ";
		      cin >> name[change];
		      cout << "Insert New Number : ";
		      cin >> number[change];
		      cout << "\nData has been change!";
		    }
		}
	      goto repeat;
	      break;

	    case 3:
	      int deleted;
	      cout << "\nDELETE CONTACT";
	      if (data == 0)
		{
		  cout << "\nNO DATA HAS FOUND!!";
		}
	      else
		{
		  for (int a = 0; a < data; a++)
		    {
		      if (name[a] != "0")
			{
			  cout << endl;
			  cout << "DATA   : [" << a << "]" << endl;
			  cout << "Name   : " << name[a] << endl;
			  cout << "number : " << number[a] << endl;
			}
		    }
		}
	      cout << "\nINSERT DATA INDEX : ";
	      cin >> deleted;
	      if (deleted > data || deleted < 0)
		{
		  cout << "NO DATA HAS FOUND!\n\n";
		  break;
		}
	      else
		{
		  for (int k = deleted; k < data; k++)
		    {
		      name[k] = name[k + 1];
		      number[k] = number[k + 1];
		    }
		  data -= 1;
		  cout << "\nData has been deleted!";
		}
	      goto repeat;
	      break;

	    case 4:
	      cout << "CONTACT LIST : " << endl;
	      if (data == 0)
		{
		  cout << "SORRY, YOU DON'T HAVE A FRIENDS :)" << endl;
		}
	      else
		{
		  for (int a = 0; a < data; a++)
		    {
		      cout << "\nName[" << a << "]= " << name[a];
		      cout << "\nNumber[" << a << "]= " << number[a];
		      cout << endl;
		    }
		}
	      goto repeat;
	      break;

	    case 5:
	      cout << " LOG OUT SUCCESSFUL" << endl;

	      goto logino;
	    }


	}
      else
	{
	forgot:
	  int pnumber2;
	  string username2;
	  char choose2;

	  cout << "FORGOT PASSWORD (y/n) ?" << endl;
	  cin >> choose2;

	  if (choose2 == 'y'){
	      cout << "type your username: ";
	      cin >> username2;
	      cout << "type your phone number : ";
	      cin >> pnumber2;
	        if (username == username2 && pnumber == pnumber2){
		        goto newpass;
		        }
	       else{
		        goto forgot;
		        }
	  }
	  else{
	        goto logino;
	  }
	}
    }
}
