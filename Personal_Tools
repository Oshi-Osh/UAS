										cout << endl;
										cout << "DATA   : [" << a  << "]" 	<< endl;
										cout << "Name   : "  << name[a] 	<< endl;
										cout << "number : "  << number[a] 	<< endl;
										}
									}
									editind:
									cout << "\nINSERT DATA INDEX : ";
									cin >> change;

										if (change > data - 1 || change < 0)
										{
										cout << "NO DATA HAS FOUND\n\n";
										system("pause");
										goto editind;
										break;
										}

										else
										{
										cout << "\nInsert New Name : ";
										cin >> name[change];
										cout << "Insert New Number : ";
										cin >> number[change];
										cout << "\nData has been change!";
										}
								}
								cout << endl;
								cout << endl;
								system("pause");
								system("cls");
								goto repeat;
								break;

								case 3:
								int deleted;
								cout << "\nDELETE CONTACT";

									if (data == 0)
									{
									cout << "\nNO DATA HAS FOUND!!";
									system("pause");
									system("cls");
									goto repeat;
									}

									else
									{
										for (int a = 0; a < data; a++)
										{
											if (name[a] != "0")
											{
											cout << endl;
											cout << "DATA   : [" << a << "]"  << endl;
											cout << "Name   : "  << name[a]   << endl;
											cout << "number : "  << number[a] << endl;
											}
										}
									}
								deleteind:	
								cout << "\nINSERT DATA INDEX : ";
								cin >> deleted;

									if (deleted > data - 1 || deleted < 0)
									{
									cout << "NO DATA HAS FOUND!\n\n";
									system("pause");
									goto deleteind;
									break;
									}

									else
									{
										for (int k = deleted; k < data; k++)
											{
											name[k] = name[k + 1];
											number[k] = number[k + 1];
											}
									data -= 1;
									cout << "\nData has been deleted!";
									}

								cout << endl;
